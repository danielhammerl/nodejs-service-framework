{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "outDir": "build/",
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
