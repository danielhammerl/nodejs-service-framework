{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "build/",
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
