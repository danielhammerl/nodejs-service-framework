  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "build/",
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
